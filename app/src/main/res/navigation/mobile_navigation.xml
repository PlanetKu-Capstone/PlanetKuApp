<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.dicoding.planetkuapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_wasteClassificationFragment"
            app:destination="@id/wasteClassificationFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.dicoding.planetkuapp.ui.profile.ProfileFragment"
        android:label="Profil" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.dicoding.planetkuapp.ui.settings.SettingsFragment"
        android:label="Settings" />

    <fragment
        android:id="@+id/wasteClassificationFragment"
        android:name="com.dicoding.planetkuapp.ui.classification.WasteClassificationFragment"
        android:label="Waste Classification" />

</navigation>